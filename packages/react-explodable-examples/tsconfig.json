{
  "extends": "../../tsconfig.json",

  "compilerOptions": {
    "noEmit": true,

    "target": "ES2020",
    "module": "Preserve",
    "moduleResolution": "Bundler",
    "moduleSuffixes": [".ts", ".tsx", ""],
    "lib": ["ES2020", "DOM"],
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,

    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
  },
}
